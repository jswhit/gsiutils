#-------------------------------------------------------
#
#  rgnl_conf
#
#  Contains definitions for export for processing regional 
#  images.
#
#  Users may need to edit the MAKE_TAPE_ARCHIVE switch, 
#  and HPSSDIR path.
#-------------------------------------------------------

#
# MAKE_TAPE_ARCHIVE is a switch that controls journaling the data files
# to tape after the images are generated.  This is only to provide a backup
# copy of the data, and does not affect the data files in MY_TANKDIR.
# The HPSSDIR is the archive directory on the hpss machine.  It must exist
# in order for the tape transfer to function.
#
  export MAKE_TAPE_ARCHIVE=0
  export HPSSDIR=/hpssuser/g01/${USER}/nbns/stats/${SUFFIX}

#
# web server resources
#
export WEBDIR=${WEBDIR}/regional/${SUFFIX}/pngs


export LOGDIR=${LOGSverf_rad}/regional/rad${SUFFIX}
export PLOT_WORK_DIR=${STMP_USER}/plotjobs_${SUFFIX}

export IMGNDIR=${MY_TANKDIR}/imgn/regional/${SUFFIX}
export TANKDIR=${MY_TANKDIR}/stats/regional/${SUFFIX}


#
#  GrADS script definitions
#
export PLOT_ANGLE_COUNT=plot_angle_count.rgn.gs
export PLOT_ANGLE_SEP=plot_angle_sep.rgn.gs


#
# default settings
#
export SUFFIX=${SUFFIX:-nrx}
export RUN_ENVIR=${RUN_ENVIR:-dev}
export USER_CLASS=${USER_CLASS:-dev}
export ACOUNT=${ACOUNT:-RDAS-MTN}

export USE_STATIC_SATYPE=${USE_STATIC_SATYPE:-0}
